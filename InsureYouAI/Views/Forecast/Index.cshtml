@using InsureYouAI.Services
@{
    ViewData["Title"] = "Poliçe Satış Tahminleri";
    Layout = "~/Views/AdminLayout/Index.cshtml";

    // Kodu temizlemek için Cast işlemini burada bir kez yapıyoruz
    var forecast = ViewBag.Forecast as PolicySalesForecast;
}

<style>
    .forecast-card {
        border-radius: 20px;
        overflow: hidden;
        border: none;
    }

    .table-modern thead th {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: 700;
        color: #adb5bd;
        padding-bottom: 1rem;
        border-bottom: 2px solid #f1f3f5;
    }

    .table-modern tbody tr {
        transition: all 0.2s ease;
    }

        .table-modern tbody tr:hover {
            background-color: #f8f9fa;
            transform: scale(1.005);
        }

    .range-bar-bg {
        height: 6px;
        width: 100%;
        background-color: #e9ecef;
        border-radius: 10px;
        position: relative;
        margin-top: 5px;
    }

    .range-bar-fill {
        height: 100%;
        background: linear-gradient(90deg, #0dcaf0 0%, #0d6efd 100%);
        border-radius: 10px;
        opacity: 0.6;
    }
</style>

<div class="container-fluid py-4">
    <div class="card forecast-card shadow-sm">
        <div class="card-body p-4">
            <div class="d-flex align-items-center justify-content-between mb-4">
                <div>
                    <h5 class="mb-1 fw-bold text-dark">
                        <i class="bi bi-graph-up-arrow text-primary me-2"></i>Poliçe Satış Tahminleri
                    </h5>
                    <p class="text-muted small mb-0">Yapay zeka destekli gelecek dönem satış öngörüleri</p>
                </div>
                <div class="badge bg-light text-primary border px-3 py-2 rounded-pill">
                    <i class="bi bi-cpu me-1"></i> AI Model v1.0
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-modern align-middle mb-0">
                    <thead>
                        <tr>
                            <th class="ps-3">Dönem</th>
                            <th>Tahmin Edilen Satış</th>
                            <th>Güven Aralığı (Min - Max)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (forecast != null && forecast.ForecastedValues != null)
                        {
                            for (int i = 0; i < forecast.ForecastedValues.Length; i++)
                            {
                                float prediction = forecast.ForecastedValues[i];
                                float lower = forecast.LowerBoundValues[i];
                                float upper = forecast.UpperBoundValues[i];
                                float range = upper - lower; // Aralık genişliği

                                <tr>
                                    <td class="ps-3">
                                        <div class="d-flex align-items-center">
                                            <div class="d-flex align-items-center justify-content-center bg-light rounded-circle text-primary fw-bold me-3" style="width:40px; height:40px;">
                                                @(i + 1)
                                            </div>
                                            <div>
                                                <h6 class="mb-0 fw-bold text-dark">@((i + 1)). Ay</h6>
                                                <small class="text-muted">Gelecek Dönem</small>
                                            </div>
                                        </div>
                                    </td>

                                    <td>
                                        <h5 class="mb-0 fw-bold text-primary">@prediction.ToString("N4")</h5>
                                        <small class="text-muted">Adet Poliçe</small>
                                    </td>

                                    <td style="width: 35%;">
                                        <div class="d-flex justify-content-between text-xs mb-1">
                                            <span class="text-muted fw-semibold">Min: @lower.ToString("N0")</span>
                                            <span class="text-muted fw-semibold">Max: @upper.ToString("N0")</span>
                                        </div>
                                        <div class="progress" style="height: 6px;">
                                            <div class="progress-bar bg-info" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </td>

                                    
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center py-4 text-muted">
                                    <i class="bi bi-exclamation-circle me-2"></i>Tahmin verisi bulunamadı.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
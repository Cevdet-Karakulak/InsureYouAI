@model List<Testimonial>

@{
    ViewData["Title"] = "TestimonialList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<style>
    /* Tablo satır efekti */
    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
        transition: all 0.2s;
    }

    /* İsimlerin yanındaki Avatar (Baş harf) */
    .client-avatar {
        width: 45px;
        height: 45px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 1.1rem;
        box-shadow: 0 4px 6px rgba(118, 75, 162, 0.3);
    }

    /* Aksiyon butonları */
    .action-btn {
        width: 35px;
        height: 35px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
        transition: all 0.2s;
        border: 1px solid #e9ecef;
        background-color: #fff;
    }

        .action-btn:hover {
            transform: translateY(-2px);
        }

        .action-btn.btn-edit:hover {
            color: #0dcaf0;
            background-color: #f0fcff;
            border-color: #0dcaf0;
        }

        /* Silme butonu için kırmızı renk ayarı */
        .action-btn.btn-delete {
            color: #dc3545;
            border-color: #e9ecef;
        }

            .action-btn.btn-delete:hover {
                color: #dc3545;
                background-color: #ffeef0;
                border-color: #dc3545;
            }
</style>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="mb-1 fw-bold text-dark">Referans Yönetimi</h4>
            <p class="text-muted mb-0">Müşteri yorumlarını ve geri bildirimlerini buradan yönetebilirsiniz.</p>
        </div>
        <a href="/Testimonial/CreateTestimonial" class="btn btn-primary btn-sm px-4 shadow-sm py-2 rounded-3">
            <i class="bi bi-person-plus-fill me-2"></i>Yeni Referans Ekle
        </a>
    </div>

    <div class="card border-0 shadow-sm mb-4 rounded-4">
        <div class="card-body p-3">
            <div class="row g-3 align-items-center">
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0 rounded-start-3 ps-3"><i class="bi bi-search text-muted"></i></span>
                        <input type="text" class="form-control bg-light border-start-0 rounded-end-3" placeholder="Müşteri adı veya ünvana göre ara...">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="width: 5%">#</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="width: 30%">Referans Sahibi</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="width: 45%">Müşteri Yorumu</th>
                        <th class="text-end pe-4 text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="width: 20%">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        // İsim baş harfini almak için güvenli yöntem
                        string initial = !string.IsNullOrEmpty(item.NameSurname) ? item.NameSurname.Substring(0, 1).ToUpper() : "?";

                        <tr>
                            <td class="ps-4 fw-bold text-secondary">@count</td>

                            <td>
                                <div class="d-flex align-items-center">
                                   
                                    <div class="d-flex flex-column">
                                        <h6 class="mb-0 text-dark fw-bold text-sm">@item.NameSurname</h6>
                                        <small class="text-muted text-xs">
                                            @if (!string.IsNullOrEmpty(item.Title))
                                            {
                                                <i class="bi bi-briefcase me-1"></i> 
                                                @item.Title
                                            }
                                            else
                                            {
                                                <span>Müşteri</span>
                                            }
                                        </small>
                                    </div>
                                </div>
                            </td>

                            <td>
                                <div class="d-flex">
                                    <i class="bi bi-quote text-primary me-2 opacity-50 display-6" style="font-size: 1.5rem; line-height: 0;"></i>
                                    <span class="text-secondary text-sm fst-italic">
                                        @if (!string.IsNullOrEmpty(item.CommentDetail) && item.CommentDetail.Length > 90)
                                        {
                                            @item.CommentDetail.Substring(0, 90)
                                    
                                            <span class="text-muted">...</span>
                                        }
                                        else
                                        {
                                            @item.CommentDetail
                                        }
                                    </span>
                                </div>
                            </td>

                            <td class="text-end pe-4">
                                <div class="d-flex justify-content-end gap-2">
                                    <a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="action-btn btn-edit" data-bs-toggle="tooltip" title="Düzenle">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="action-btn btn-delete" onclick="return confirm('Bu referansı silmek istediğinize emin misiniz?')" data-bs-toggle="tooltip" title="Sil">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (Model.Count == 0)
        {
            <div class="text-center py-5">
                <i class="bi bi-people text-muted display-4"></i>
                <p class="mt-3 text-muted">Henüz eklenmiş bir referans bulunmuyor.</p>
            </div>
        }
    </div>
</div>
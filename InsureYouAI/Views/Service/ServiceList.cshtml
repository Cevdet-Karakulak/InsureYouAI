@model List<Service>

@{
    ViewData["Title"] = "ServiceList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<style>
    /* Tablo satırlarına hover efekti */
    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
        transition: all 0.2s;
    }

    /* Aksiyon butonları (Düzenle/Sil) için stil */
    .action-btn {
        width: 35px;
        height: 35px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
        transition: all 0.2s;
        border: 1px solid transparent;
        background-color: #f8f9fa;
    }

        .action-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 6px rgba(0,0,0,0.08);
        }

        .action-btn.btn-edit:hover {
            color: #0d6efd;
            background-color: #e7f1ff;
        }

        .action-btn.btn-delete:hover {
            color: #dc3545;
            background-color: #ffeef0;
        }

    /* Başlık yanındaki ikon kutusu */
    .service-icon-box {
        width: 36px;
        height: 36px;
        background: linear-gradient(45deg, #0d6efd, #0dcaf0);
        color: white;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.1rem;
        box-shadow: 0 4px 10px rgba(13, 110, 253, 0.2);
    }
</style>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="mb-1 fw-bold text-dark">Hizmet Yönetimi</h4>
            <p class="text-muted mb-0">Web sitesinde görüntülenen hizmetleri buradan yönetebilirsiniz.</p>
        </div>
        <a href="/Service/CreateService" class="btn btn-primary btn-sm px-4 shadow-sm py-2 rounded-3">
            <i class="bi bi-plus-lg me-2"></i>Yeni Hizmet Ekle
        </a>
    </div>

    <div class="card border-0 shadow-sm mb-4 rounded-4">
        <div class="card-body p-3">
            <div class="row g-3 align-items-center">
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0 rounded-start-3 ps-3"><i class="bi bi-search text-muted"></i></span>
                        <input type="text" class="form-control bg-light border-start-0 rounded-end-3" placeholder="Hizmet başlığına göre ara...">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="width: 5%">#</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="width: 25%">Hizmet Başlığı</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="width: 50%">Açıklama</th>
                        <th class="text-end pe-4 text-uppercase text-secondary text-xxs font-weight-bolder opacity-7" style="width: 20%">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td class="ps-4">
                                <span class="fw-bold text-secondary">@count</span>
                            </td>

                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="service-icon-box me-3">
                                        <i class="bi bi-briefcase"></i>
                                    </div>
                                    <div class="d-flex flex-column">
                                        <h6 class="mb-0 text-dark fw-semibold">@item.Title</h6>
                                        <small class="text-muted">ID: #@item.ServiceId</small>
                                    </div>
                                </div>
                            </td>

                            <td>
                                <span class="text-secondary text-sm">
                                    @if (!string.IsNullOrEmpty(item.Description) && item.Description.Length > 80)
                                    {
                                        @item.Description.Substring(0, 80)
                                
                                        <span class="text-muted">...</span>
                                    }
                                    else
                                    {
                                        @item.Description
                                    }
                                </span>
                            </td>

                            <td class="text-end pe-4">
                                <div class="d-flex justify-content-end gap-2">
                                    <a href="/Service/UpdateService/@item.ServiceId" class="action-btn btn-edit text-secondary" data-bs-toggle="tooltip" title="Düzenle">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a href="/Service/DeleteService/@item.ServiceId" class="action-btn btn-delete text-secondary" onclick="return confirm('Bu hizmeti silmek istediğinize emin misiniz?')" data-bs-toggle="tooltip" title="Sil">
                                        <i class="bi bi-trash3"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (Model.Count == 0)
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox text-muted display-4"></i>
                <p class="mt-3 text-muted">Henüz kayıtlı bir hizmet bulunmuyor.</p>
            </div>
        }
    </div>
</div>
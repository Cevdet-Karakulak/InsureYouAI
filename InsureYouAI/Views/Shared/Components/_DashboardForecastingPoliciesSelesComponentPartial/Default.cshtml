@model List<(string Type, float Forecast)>

@{
    var order = new Dictionary<string, int>
    {
        { "Egitim", 1 },
        { "Kasko", 2 },
        { "Konut", 3 },
        { "Sağlık", 4 },
        { "Trafik", 5 }
    };

    string GetIcon(string type) =>
        type switch
        {
            "Egitim" => "/policyicons/egitim.png",
            "Kasko" => "/policyicons/kasko.png",
            "Konut" => "/policyicons/konut.png",
            "Sağlık" => "/policyicons/saglik.png",
            "Trafik" => "/policyicons/trafik.png",
            _ => "/policyicons/egitim.png"
        };

    float total = Model.Sum(x => x.Forecast);
}

<style>
    .policy-item {
        padding: 12px 6px;
        border-radius: 10px;
        transition: all .2s ease;
    }

        .policy-item:hover {
            background-color: #f8f9fa;
            transform: translateY(-2px);
        }

    .policy-icon {
        width: 48px;
        height: 48px;
        flex-shrink: 0;
    }

    .policy-progress {
        height: 7px;
        border-radius: 10px !important;
    }

    .policy-progress-bar {
        border-radius: 10px !important;
        transition: width .4s ease;
    }

    .policy-separator {
        margin: 4px 0;
        border-color: #e9ecef;
    }
</style>

<div class="card rounded-4 w-100 h-100 shadow-sm">
    <div class="card-body d-flex flex-column">

        <div class="d-flex align-items-center mb-3">
            <h6 class="mb-0 fw-bold">2025 Aralık Ayı Tahmini Poliçe Satışları (ML.NET)</h6>
            <div class="fs-5 ms-auto dropdown">
                <div class="dropdown-toggle dropdown-toggle-nocaret cursor-pointer" data-bs-toggle="dropdown">
                    <i class="bi bi-three-dots"></i>
                </div>
            </div>
        </div>

        <div class="flex-grow-1">

            @foreach (var item in Model.OrderBy(x => order[x.Type]))
            {
                int adet = (int)item.Forecast;
                int yuzde = total > 0 ? (int)((item.Forecast / total) * 100) : 0;

                <div class="d-flex align-items-start gap-3 policy-item">
                    <img src="@GetIcon(item.Type)" class="policy-icon" />

                    <div class="flex-grow-1">

                        <p class="d-flex justify-content-between my-1">
                            <span class="fw-semibold">@item.Type</span>

                            <span class="text-dark">
                                @adet adet • <b>@yuzde%</b>
                            </span>
                        </p>

                        <div class="progress policy-progress">
                            <div class="progress-bar bg-success policy-progress-bar"
                                 role="progressbar"
                                 style="width:@yuzde%">
                            </div>
                        </div>
                    </div>
                </div>

                <hr class="policy-separator" />
            }

        </div>

    </div>
</div>

@model InsureYouAI.Models.NextPrevArticleViewModel

<div class="posts_navigation pt-35 pb-35">
    <div class="nav-flex">

        <!-- Önceki -->
        <div class="nav-prev">
            <span>ÖNCEKİ POST</span>
            <h4>
                @if (Model.PrevId.HasValue)
                {
                    <a href="/Blog/BlogDetail/@Model.PrevId">@Model.PrevTitle</a>
                }
                else
                {
                    <span>Önceki makale yok</span>
                }
            </h4>
        </div>

        <!-- Orta ikon -->
        <div class="nav-center">
            <a href="/Blog/BlogList" class="blog-filter">
                <i class="fas fa-shield-alt"
                   style="color:#1e88e5; margin-right:28px; font-size:50px;">
                </i>
            </a>
        </div>

        <!-- Sonraki -->
        <div class="nav-next">
            <span>SONRAKİ POST</span>
            <h4>
                @if (Model.NextId.HasValue)
                {
                    <a href="/Blog/BlogDetail/@Model.NextId">@Model.NextTitle</a>
                }
                else
                {
                    <span>Sonraki makale yok</span>
                }
            </h4>
        </div>

    </div>
</div>

<style>
    .nav-flex {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 20px;
    }

    .nav-prev,
    .nav-next {
        width: 33%;
    }

    .nav-prev {
        text-align: left;
    }

    .nav-next {
        text-align: right;
    }

    .nav-center {
        width: 33%;
        text-align: center;
    }

        .nav-center img {
            width: 55px;
            height: 55px;
            opacity: .9;
            border-radius: 50%;
        }

    .nav-prev h4 a,
    .nav-next h4 a {
        display: inline-block;
        max-width: 100%;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>
